{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "taskName": "app clean & install",
      "command": "rm -rf bower_components && bower cache clean && bower i",
      "type": "shell"
    }, {
      "taskName": "app serve",
      "command": "polymer serve",
      "type": "shell"
    }, {
      "taskName": "app test",
      "command": "polymer test",
      "type": "shell"
    }, {
      "taskName": "app serve bundle",
      "command": "polymer build && polymer serve",
      "type": "shell"
    }
  ]
}
